        <view class="content">
          <view class="title">课程内容</view>

          <view class="item">
            <text class="label">课程名称</text> 
            <input class="weui-input" auto-focus placeholder="请最多输入12个字"/>
            <image class="icon" src="../../images/home.png" mode="widthFix"></image>
          </view>

          <view class="item">
            <text class="label">上课时间</text> 
            <input class="weui-input" auto-focus placeholder="请最多输入12个字"/>
            <image class="icon" src="../../images/home.png" mode="widthFix"></image>
          </view>

          <view class="item">
            <text class="label">下课时间</text> 
            <input class="weui-input" auto-focus placeholder="请最多输入12个字"/>
            <image class="icon" src="../../images/home.png" mode="widthFix"></image>
          </view>

          <view class="item last">
            <text class="label">最大人数</text> 
            <input class="weui-input" auto-focus placeholder="请最多输入12个字"/>
            <image class="icon" src="../../images/home.png" mode="widthFix"></image>
