/**index.wxss**/
page-index {
  width: 100%;
}

.container {
  background: #f5f6f7;
  height: 100vh;
  padding: 16px;
  width: 100%;
}

.content {
  width: 100%;
}

.item {
  padding: 16px;
  background: #fff;
  border-radius: 8px;
}

.title {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  justify-content: space-between;
}

.title-text {
  color: #002515;
  font-family: "PingFang SC";
  font-size: 18px;
  font-style: normal;
  font-weight: 600;
  line-height: 26px;
}

.icon {
  width: 24px;
  height: 24px;
}

.time-title,
.apply-title {
  font-size: 16px;
  color: #00000099;
  font-family: "PingFang SC";
  font-style: normal;
  font-weight: 400;
  line-height: 24px;
}

.time-text {
  color: #000000e6;
  font-family: "PingFang SC";
  font-size: 18px;
  font-style: normal;
  font-weight: 600;
  line-height: 26px;
}

.course-info {
  display: flex;
  justify-content: space-between;
}

.content-text-item {
  flex: 1;
}

.num-press {
  width: 82px;
  height: 6px;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.progress {
  border-radius: 5px;
}

.text-num {
  margin-right: 8px;
}

.press {
  display: flex;
  justify-content: flex-start;
  align-items: center; /* 垂直居中 */
}

.add-course-btn {
  width: 100% !important;
  height: 48px;
  padding: 12px;
  justify-content: center;
  align-items: center;
  gap: 4px;
  color: #21b664;
  font-size: 16px;
  flex-shrink: 0;
  border-radius: 6px;
  border: 1px solid var(--Brand-Brand6-Hover, #21b664);
  background: var(--Gray-White, #fff);
}

.update-course-btn {
  width: 100% !important;
  height: 48px;
  padding: 12px;
  justify-content: center;
  align-items: center;
  gap: 4px;
  color: #fff;
  font-size: 16px;
  flex-shrink: 0;
  border-radius: 6px;
  background: var(--Brand-Brand6-Hover, #21b664);
}
