/**index.wxss**/
page-index {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  background: #f5f6f7;
  height: 100vh;
}

.list-container {
  padding: 16px;
}

.list {
  width: 343px;
  height: 115px;
  margin-bottom: 16px;
  overflow: hidden;
  flex-shrink: 0;
  border-radius: 6px;
  background: linear-gradient(180deg, #2ac570 0%, #20a75c 100%);
  box-shadow: 0 8px 8px 0 #71cd924d, 0 0 8px 0 #4dc17b4d;
}

.list .title {
  margin: 16px 0 0 16px;
  color: #ffffff;
  text-shadow: 0 3px 14px #0000000d, 0 8px 10px #0000000f, 0 5px 5px #0000001a;
  font-family: "PingFang SC";
  font-size: 24px;
  font-style: normal;
  font-weight: 600;
  line-height: 32px;
}

.add-course-header {
  display: flex; /* 启用Flexbox */
  justify-content: space-between; /* 子元素之间填充空间，但这不是我们想要的效果，只是作为展示 */
  align-items: center; /* 子元素在交叉轴上的对齐方式，这里用于垂直居中，可选 */
  width: 100%; /* 容器的宽度 */
  background: #fff;
  padding: 15px;
}

.calendar-select {
  flex-grow: 1;
  text-align: center; /* 文本居中显示 */
  /* 如果需要，可以添加一些内边距或外边距 */
  padding: 0 10px; /* 示例内边距 */
}
.calendar-show-btn {
  width: 52px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 4px;
  border-radius: 6px;
  border: 1px solid var(--Brand-Brand6-Hover, #21b664);
  background: var(--Gray-White, #fff);
  color: #21b664;
  text-align: center;
  font-family: "PingFang SC";
  font-size: 14px;
  font-style: normal;
  font-weight: 600;
}

.add-course-title {
  display: flex;
  width: 343px;
  padding: 20px 12px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20px;
  color: 14px;
  border-radius: 8px;
  background: var(--, #fff);
}

.add-course-btn {
  display: flex;
  width: 343px;
  height: 48px;
  padding: 12px;
  justify-content: center;
  align-items: center;
  gap: 4px;
  color: #21b664;
  text-align: center;
  font-family: "PingFang SC";
  font-size: 16px;
  font-style: normal;
  font-weight: 600;
  line-height: 24px;
  flex-shrink: 0;
  border-radius: 6px;
  border: 1px solid var(--Brand-Brand6-Hover, #21b664);
  background: var(--Gray-White, #fff);
}

